@model CreateBookingDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>



@await Component.InvokeAsync("UILayoutHeadComponent")

<body class="sub_page">

    @await Component.InvokeAsync("BookATableNavbarComponent")

    <!-- book section -->
    <section class="book_section layout_padding">
        <div class="container">
            <div class="heading_container">
                <h2>
                    Rezerasyon Oluştur
                </h2>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form_container">
                        <form method="post">
                            <div>
                                <input type="text" class="form-control" placeholder="Adınız" asp-for="FirstName" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div>
                                <input type="text" class="form-control" placeholder="Soyadınız" asp-for="LastName" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <div>
                                <input type="text" class="form-control" placeholder="Telefon Numaranız" asp-for="PhoneNumber" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            <div>
                                <input type="email" class="form-control" placeholder="Mail Adresiniz" asp-for="EMail" />
                                <span asp-validation-for="EMail" class="text-danger"></span>
                            </div>
                            <div>
                                <select asp-for ="NumberOfGuests" class="form-control nice-select wide">
                                    <option value="" disabled selected>
                                        Kişi Sayısı
                                    </option>
                                    <option value="1">
                                        1
                                    </option>
                                    <option value="2">
                                        2
                                    </option>
                                    <option value="3">
                                        3
                                    </option>
                                    <option value="4">
                                        4
                                    </option>
                                    <option value="5">
                                        5
                                    </option>
                                    <option value="6">
                                        6
                                    </option>
                                    <option value="7">
                                        7
                                    </option>
                                    <option value="8">
                                        8++
                                    </option>
                                </select>
                                <span asp-validation-for="NumberOfGuests" class="text-danger"></span>
                            </div>
                            <div>
                                <input type="date" class="form-control" asp-for="Date">
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>
                            <div class="btn_box">
                                <button>
                                    YERİNİZİ AYIRTIN
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="map_container ">
                        <iframe src="@ViewBag.Location" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </section>

    @await Component.InvokeAsync("UILayoutFooterComponent")

    @await Component.InvokeAsync("UILayoutScriptsComponent")


</body>

</html>