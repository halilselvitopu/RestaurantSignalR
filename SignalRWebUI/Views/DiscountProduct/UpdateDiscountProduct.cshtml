@model UpdateDiscountProductDto
@{
    ViewData["Title"] = "UpdateDiscountProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İndirimli Ürün İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">İndirimli Ürün Güncelleme Sayfası</div>
						</div>
						<input type="hidden" asp-for="Id"/>
						<div class="card-body">
							<div class="form-group">
								<label>Kampanya Adı</label>
								<input type="text" class="form-control" asp-for="Title" />
								<br />
								<label>Kampanya İndirim Oranı</label>
								<input type="text" class="form-control" asp-for="Amount" />
								<br />
								<label>Kampanya Görseli (Url Olarak Giriniz) </label>
								<input type="text" class="form-control" asp-for="ImageUrl" />
								<br />
								<label>Kampanya Açıklaması</label>
								<input type="text" class="form-control" asp-for="Description" />
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-success">Kampanyayı Güncelle</button>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>


