@model List<ResultDiscountProductDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Günün İndrimleri İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Günün İndirimleri Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Günün İndirimleri Listesi ile ilgili işlemleri gerçekleştirebilirsiniz. Tema bütünlüğü için <strong> 2 adet</strong> kampanya seçiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Kampanya</th>
                                    <th scope="col">İndirim Oranı</th>
                                    <th scope="col">Durumu</th>
                                    <th scope="col">Aktif Yap</th>
                                    <th scope="col">Pasif Yap</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th>@count</th>
                                        <td>@item.Title</td>
                                        <td>@item.Amount</td>
                                        <td>@(item.Status == false ? "İndirimde değil" : "İndirimde")</td>
                                        <td><a href="/DiscountProduct/ChangeStatusToTrue/@item.Id" class="btn btn-outline-success">Aktif Yap</a></td>
                                        <td><a href="/DiscountProduct/ChangeStatusToFalse/@item.Id" class="btn btn-outline-dark">Pasif Yap</a></td>
                                        <td><a href="/DiscountProduct/DeleteDiscountProduct/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/DiscountProduct/UpdateDiscountProduct/@item.Id" class="btn btn-outline-warning">Güncelle</a></td>

                                    </tr>

                                }

                            </tbody>
                        </table>
                        <a href="/DiscountProduct/AddDiscountProduct/" class="btn btn-outline-primary">Yeni Kampanya Girişi</a>
                    </div>
                </div>


            </div>

        </div>
    </div>
</div>