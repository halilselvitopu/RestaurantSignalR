@model List<ResultSliderDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Öne Çıkan Ürünler İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Öne Çıkan Ürünler Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Öne çıkan ürünler ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz. Lütfen sadece <strong>1 adet</strong> liste oluşturunuz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Ürün 1</th>
                                    <th scope="col">Açıklama 1</th>
                                    <th scope="col">Ürün 2</th>
                                    <th scope="col">Açıklama 2</th>
                                    <th scope="col">Ürün 3</th>
                                    <th scope="col">Açıklama 3</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th>@count</th>
                                        <td>@item.Title1</td>
                                        <td>@item.Description1</td>
                                        <td>@item.Title2</td>
                                        <td>@item.Description2</td>
                                        <td>@item.Title3</td>    
                                        <td>@item.Description3</td>
                                        <td><a href="/Slider/DeleteSlider/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Slider/UpdateSlider/@item.Id" class="btn btn-outline-warning">Güncelle</a></td>

                                    </tr>

                                }

                            </tbody>
                        </table>
                        <a href="/Slider/AddSlider/" class="btn btn-outline-primary">Yeni Öne Çıkan Ürün Girişi</a>
                    </div>
                </div>


            </div>

        </div>
    </div>
</div>

