@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
<div class="container-fluid">
	<h4 class="page-title">Hakkımızda İşlemleri</h4>
	<div class="row">
		<div class="col-md-12">
			<form method="post">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Hakkımızda Yazısı Güncelleme Sayfası</div>
					</div>
					<input type="hidden" asp-for="Id" />
					<div class="card-body">
						<div class="form-group">
							<label>Kategori Adı</label>
							<input type="text" class="form-control" asp-for="Title" />
							<br />
							<label>Görsel Url'ini Giriniz</label>
							<input type="text" class="form-control" asp-for="ImageUrl" />
							<br />
							<label>Açıklama</label>
							<textarea class="form-control" rows="5" asp-for="Description"></textarea>
						</div>
					</div>
					<div class="card-action">
						<button class="btn btn-success">Hakkımızda Yazısını Güncelle</button>
					</div>
				</div>
			</form>
		</div>

	</div>
</div>
</div>