@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkımızda İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Hakkımızda Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Hakkımızda alanı ile ilgili işlemleri gerçekleştirebilirsiniz : (Tema bütünlüğü için sadece bir tana hakkımızda alanı oluşturun).
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<th>@count</th>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td><a href="/About/DeleteAbout/@item.Id" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/About/UpdateAbout/@item.Id" class="btn btn-outline-warning">Güncelle</a></td>

									</tr>

								}

							</tbody>
						</table>
						<a href="/About/AddAbout/" class="btn btn-outline-primary">Yeni Hakkımızda Girişi</a>
					</div>
				</div>


			</div>

		</div>
	</div>
</div>


