@model List<ResultNotificationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

div class="content">
<div class="container-fluid">
    <h4 class="page-title">Bildirim İşlemleri</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Bildirim Listesi</div>
                </div>
                <div class="card-body">
                    <div class="card-sub">
                        Bildirim ile ilgili işlemleri gerçekleştirebilirsiniz :
                    </div>
                    <table class="table mt-3">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Açıklama</th>
                                <th scope="col">Tarih</th>
                                <th scope="col">Durum</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                                <th scope="col">Okundu Olarak İşaretle</th>
                                <th scope="col">Okunmadı Olarak İşaretle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.Description</td>                                                              
                                    <td>@item.Date</td>
                                    @if (item.Status == true)
                                    {
                                        <td>Okundu</td>
                                    }
                                    @if (item.Status == false)
                                    {
                                        <td>Okunmadı</td>
                                    }
                                    <td><a href="/Notification/DeleteNotification/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Notification/UpdateNotification/@item.Id" class="btn btn-outline-warning">Güncelle</a></td>
                                    <td><a href="/Notification/ChangeNotificationStatusToTrue/@item.Id" class="btn btn-outline-success">Okundu Olarak İşaretle</a></td>
                                    <td><a href="/Notification/ChangeNotificationStatusToFalse/@item.Id" class="btn btn-outline-secondary">Okunmadı Olarak İşaretle</a></td>

                                </tr>

                            }

                        </tbody>
                    </table>
                    <a href="/Notification/AddNotification/" class="btn btn-outline-primary">Yeni Bildirim Girişi</a>
                </div>
            </div>


        </div>

    </div>
</div>
</div>


