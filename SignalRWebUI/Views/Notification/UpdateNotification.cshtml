@model UpdateNotificationDto
@{
    ViewData["Title"] = "UpdateNotification";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Bildirim İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<input type="hidden" asp-for="Id" />
						<div class="card-header">
							<div class="card-title">Bildirim Güncelleme Sayfası</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label>Bildirim Türü</label>
								<input type="text" class="form-control" asp-for="Type" />
								<br />
								<label>Bildirim İkonu</label>
								<input type="text" class="form-control" asp-for="Icon" /> 
								<br />
								<label>Açıklama</label>
								<input type="text" class="form-control" asp-for="Description" />
								
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-success">Bildirimi Güncelle</button>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>

