@model CreateMailDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Mail İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Mail Gönderme Paneli</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label>Alıcı Mail Adresi</label>
								<input type="email" class="form-control" asp-for="Receiver" />
								<br />
								<label>Konu</label>
								<input type="text" class="form-control" asp-for="Subject" />
								<br />
								<label>Mesajınız</label>
								 <textarea class="form-control" asp-for="Body" rows="5"></textarea>
								<br />
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-success">Maili Gönder</button>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>

